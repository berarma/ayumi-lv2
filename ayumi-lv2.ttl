@prefix atom:    <http://lv2plug.in/ns/ext/atom#> .
@prefix bufsize: <http://lv2plug.in/ns/ext/buf-size#> .
@prefix doap:    <http://usefulinc.com/ns/doap#> .
@prefix foaf:    <http://xmlns.com/foaf/0.1/> .
@prefix lv2:     <http://lv2plug.in/ns/lv2core#> .
@prefix midi:    <http://lv2plug.in/ns/ext/midi#> .
@prefix opts:    <http://lv2plug.in/ns/ext/options#> .
@prefix param:   <http://lv2plug.in/ns/ext/parameters#> .
@prefix pg:      <http://lv2plug.in/ns/ext/port-groups#> .
@prefix pprop:   <http://lv2plug.in/ns/ext/port-props#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix state:   <http://lv2plug.in/ns/ext/state#> .
@prefix time:    <http://lv2plug.in/ns/ext/time#> .
@prefix urid:    <http://lv2plug.in/ns/ext/urid#> .
@prefix units:   <http://lv2plug.in/ns/extensions/units#> .
@prefix plug:    <http://lv2plug.in/plugins/eg-params#> .
@prefix patch:   <http://lv2plug.in/ns/ext/patch#> .
@prefix lv2pg:   <http://lv2plug.in/ns/ext/port-groups#> .
@prefix ayumilv2: <http://github.com/berarma/ayumi-lv2#> .

plug:clock
    a lv2:Parameter ;
    rdfs:label "Clock" ;
    rdfs:comment "Clock frequency" ;
    lv2pg:group ayumilv2:Setup ;
    rdfs:range atom:Double ;
    units:unit units:mhz ;
    lv2:minimum 1.0 ;
    lv2:maximum 2.0 ;
    lv2:default 2.0 .

plug:ymmode
    a lv2:Parameter ;
    rdfs:label "YM Mode" ;
    rdfs:comment "Enable YM2149 mode" ;
    lv2pg:group ayumilv2:Setup ;
    rdfs:range atom:Bool ;
    lv2:default 1 .

plug:noise_period
    a lv2:Parameter ;
    rdfs:label "Noise period" ;
    rdfs:comment "Period of the noise" ;
    lv2pg:group ayumilv2:Noise ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 31 ;
    lv2:default 0 .

plug:envelope_period
    a lv2:Parameter ;
    rdfs:label "Envelope period" ;
    rdfs:comment "Period of the envelope" ;
    lv2pg:group ayumilv2:Envelope ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 65535 ;
    lv2:default 0 .

plug:envelope_hold
    a lv2:Parameter ;
    rdfs:label "Envelope Hold" ;
    rdfs:comment "Hold the last value" ;
    lv2pg:group ayumilv2:Envelope ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:envelope_alternate
    a lv2:Parameter ;
    rdfs:label "Envelope Alternate" ;
    rdfs:comment "Alternate between up and down ramps" ;
    lv2pg:group ayumilv2:Envelope ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:envelope_attack
    a lv2:Parameter ;
    rdfs:label "Envelope Attack" ;
    rdfs:comment "Produce attach phase" ;
    lv2pg:group ayumilv2:Envelope ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:envelope_continue
    a lv2:Parameter ;
    rdfs:label "Envelope Continue" ;
    rdfs:comment "Loop the envelope as specified by Hold" ;
    lv2pg:group ayumilv2:Envelope ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_a_period
    a lv2:Parameter ;
    rdfs:label "Channel A period" ;
    rdfs:comment "Period of tone generator A" ;
    lv2pg:group ayumilv2:ChannelA ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 4095 ;
    lv2:default 0 .

plug:channel_b_period
    a lv2:Parameter ;
    rdfs:label "Channel B period" ;
    rdfs:comment "Period of tone generator B" ;
    lv2pg:group ayumilv2:ChannelB ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 4095 ;
    lv2:default 0 .

plug:channel_c_period
    a lv2:Parameter ;
    rdfs:label "Channel C period" ;
    rdfs:comment "Period of tone generator C" ;
    lv2pg:group ayumilv2:ChannelC ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 4095 ;
    lv2:default 0 .

plug:channel_a_level
    a lv2:Parameter ;
    rdfs:label "Channel A level" ;
    rdfs:comment "Level of tone generator A" ;
    lv2pg:group ayumilv2:ChannelA ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 15 ;
    lv2:default 0 .

plug:channel_b_level
    a lv2:Parameter ;
    rdfs:label "Channel B level" ;
    rdfs:comment "Level of tone generator B" ;
    lv2pg:group ayumilv2:ChannelB ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 15 ;
    lv2:default 0 .

plug:channel_c_level
    a lv2:Parameter ;
    rdfs:label "Channel C level" ;
    rdfs:comment "Level of tone generator C" ;
    lv2pg:group ayumilv2:ChannelC ;
    rdfs:range atom:Int ;
    lv2:minimum 0 ;
    lv2:maximum 15 ;
    lv2:default 0 .

plug:channel_a_mode
    a lv2:Parameter ;
    rdfs:label "Channel A mode" ;
    rdfs:comment "Use envelope generator for level of tone generator A" ;
    lv2pg:group ayumilv2:ChannelA ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_b_mode
    a lv2:Parameter ;
    rdfs:label "Channel B mode" ;
    rdfs:comment "Use envelope generator for level of tone generator B" ;
    lv2pg:group ayumilv2:ChannelB ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_c_mode
    a lv2:Parameter ;
    rdfs:label "Channel C mode" ;
    rdfs:comment "Use envelope generator for level of tone generator C" ;
    lv2pg:group ayumilv2:ChannelC ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_a_tone
    a lv2:Parameter ;
    rdfs:label "Channel A tone" ;
    rdfs:comment "Enable tone generator in channel A" ;
    lv2pg:group ayumilv2:ChannelA ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_b_tone
    a lv2:Parameter ;
    rdfs:label "Channel B tone" ;
    rdfs:comment "Enable tone generator in channel B" ;
    lv2pg:group ayumilv2:ChannelB ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_c_tone
    a lv2:Parameter ;
    rdfs:label "Channel C tone" ;
    rdfs:comment "Enable tone generator in channel C" ;
    lv2pg:group ayumilv2:ChannelC ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_a_noise
    a lv2:Parameter ;
    rdfs:label "Channel A noise" ;
    rdfs:comment "Enable noise generator in channel A" ;
    lv2pg:group ayumilv2:ChannelA ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_b_noise
    a lv2:Parameter ;
    rdfs:label "Channel B noise" ;
    rdfs:comment "Enable noise generator in channel B" ;
    lv2pg:group ayumilv2:ChannelB ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

plug:channel_c_noise
    a lv2:Parameter ;
    rdfs:label "Channel C noise" ;
    rdfs:comment "Enable noise generator in channel C" ;
    lv2pg:group ayumilv2:ChannelC ;
    rdfs:range atom:Bool ;
    lv2:default 0 .

ayumilv2:Setup
    a lv2pg:InputGroup;
    lv2:name "Setup" ;
    lv2:symbol "SETUP" .

ayumilv2:Noise
    a lv2pg:InputGroup;
    lv2:name "Noise" ;
    lv2:symbol "NOISE" .

ayumilv2:ChannelA
    a lv2pg:InputGroup;
    lv2:name "Channel A" ;
    lv2:symbol "A" .

ayumilv2:ChannelB
    a lv2pg:InputGroup;
    lv2:name "Channel B" ;
    lv2:symbol "B" .

ayumilv2:ChannelC
    a lv2pg:InputGroup;
    lv2:name "Channel C" ;
    lv2:symbol "C" .

ayumilv2:Envelope
    a lv2pg:InputGroup;
    lv2:name "Envelope" ;
    lv2:symbol "ENV" .

<https://github.com/atsushieno/ayumi-lv2>
    a doap:Project, lv2:Plugin, lv2:InstrumentPlugin ;
    doap:name "ayumi-lv2" ;
    doap:license <https://spdx.org/licenses/MIT> ;
    doap:maintainer [
        foaf:name     "Atsushi Eno" ;
        foaf:homepage <https://github.com/atsushieno/ayumi-lv2> ;
        foaf:mbox     <mailto:atsushieno@gmail.com> ;
    ] ;
    rdfs:comment "ayumi AY-3-8910 and YM2149 emulator for LV2" ;

    lv2:minorVersion 0 ;
    lv2:microVersion 1 ;

    lv2:requiredFeature urid:map ;
    lv2:optionalFeature opts:options ;

    opts:supportedOption param:sampleRate ;

    patch:writable plug:clock,
        plug:ymmode,
        plug:noise_period,
        plug:envelope_period,
        plug:envelope_hold,
        plug:envelope_alternate,
        plug:envelope_attack,
        plug:envelope_continue,
        plug:channel_a_period,
        plug:channel_b_period,
        plug:channel_c_period,
        plug:channel_a_level,
        plug:channel_b_level,
        plug:channel_c_level,
        plug:channel_a_mode,
        plug:channel_b_mode,
        plug:channel_c_mode,
        plug:channel_a_tone,
        plug:channel_b_tone,
        plug:channel_c_tone,
        plug:channel_a_noise,
        plug:channel_b_noise,
        plug:channel_c_noise;

    lv2:port [
        a lv2:InputPort, atom:AtomPort ;
        atom:bufferType atom:Sequence ;
        atom:supports midi:MidiEvent ;
        lv2:designation lv2:control ;
        lv2:index 0 ;
        lv2:symbol "control" ;
        lv2:name "Control"
    ] , [
        a lv2:AudioPort, lv2:OutputPort ;
        lv2:index 1 ;
        lv2:symbol "out_left" ;
        lv2:name "Left Output"
    ] , [
        a lv2:AudioPort, lv2:OutputPort ;
        lv2:index 2 ;
        lv2:symbol "out_right" ;
        lv2:name "Right Output"
    ] .
